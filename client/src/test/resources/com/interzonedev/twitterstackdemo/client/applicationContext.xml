<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath:/com/interzonedev/twitterstackdemo/common/applicationContext.xml" />

	<context:component-scan base-package="com.interzonedev.twitterstackdemo.client" />

	<context:property-placeholder location="classpath:com/interzonedev/twitterstackdemo/client/threadpool.properties" />

	<bean id="httpQueue" class="java.util.concurrent.LinkedBlockingQueue" />

	<bean id="httpThreadPoolExecutor" class="java.util.concurrent.ThreadPoolExecutor" destroy-method="shutdown">
		<constructor-arg index="0" value="${http.workerpool.core_thread_pool_size}" />
		<constructor-arg index="1" value="${http.workerpool.max_thread_pool_size}" />
		<constructor-arg index="2" value="${http.workerpool.keep_alive_seconds}" />
		<constructor-arg index="3" type="java.util.concurrent.TimeUnit" value="SECONDS" />
		<constructor-arg index="4" ref="httpQueue" />
	</bean>

</beans>
